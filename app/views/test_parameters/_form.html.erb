<%= content_for :js do %>
  <%= javascript_include_tag 'app', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'new_ckeditor/classic/ckeditor', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class='float-start'>
  <h2>
    <%= @lab_test.name %>
    <%= " - " %>  
    <%= @test_parameter.new_record? ? "Add New Parameter" : "Edit New Parameter" %>
  </h2>
</div>

<div class='float-end'>
  <%= link_to "Lab Test Detail", @lab_test, class: 'btn btn-sm btn-dark' %>
</div>

<div class='clearfix'></div>


<%= simple_form_for([@lab_test, @test_parameter]) do |f| %>
  <div class="row">
    <div class="col-md-6"><%= f.input :name %></div>
    <div class="col-md-6"><%= f.input :key %></div>
  </div>
  
  <%= f.input :parameter_type, collection: [["Decimal", 'number'], ["String", "string"]]%>
  <%= f.input :description, as: :ckeditor %>
  <%= f.input :cause_effect, as: :ckeditor %>
  <%= f.input :what_can_do, as: :ckeditor %>
  <%= f.input :did_you_konw, as: :ckeditor %>



  <%= f.submit "Save", class: 'btn btn-primary' %>

<% end %>
